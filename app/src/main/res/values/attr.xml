<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeLayout">
        <attr name="layout" format="reference" />
    </declare-styleable>
    <declare-styleable name="FlowLayout_Layout">
        <attr name="layout_weight_width" format="float"/>
        <attr name="layout_weight_height" format="float"/>
    </declare-styleable>
    <declare-styleable name="FlowLayout">
        <attr name="item_horizontal_spacing" format="dimension"/>
        <attr name="item_vertical_spacing" format="dimension"/>
        <attr name="separator_color" format="color"/>
        <attr name="separator_size" format="dimension"/>
        <attr name="closing" format="boolean"/>
        <attr name="rowCount" format="integer"/>

        <attr name="title" format="string" />
        <attr name="titleDirection" format="enum">
            <enum name="LEFT" value="0"/>
            <enum name="TOP" value="1"/>
            <enum name="RIGHT" value="2"/>
            <enum name="BOTTOM" value="3"/>
        </attr>
        <attr name="titlePaddingLeft" format="dimension" />
        <attr name="titlePaddingRight" format="dimension" />
        <attr name="titlePaddingTop" format="dimension" />
        <attr name="titlePaddingBottom" format="dimension" />
        <attr name="titleFontSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="titleBackgroundColor" format="color"/>
    </declare-styleable>
</resources>